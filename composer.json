{
  "scripts": {
    "post-install-cmd": "@composer update"
  },
  "require": {
    "wikimedia/composer-merge-plugin": "^1.4",
    "google/cloud-logging": "^1.19",
    "google/cloud-tasks": "^1.7"
  },
  "extra": {
    "merge-plugin": {
      "include": [
        "src/*/composer.json"
      ],
      "recurse": false,
      "replace": false,
      "ignore-duplicates": false,
      "merge-dev": true,
      "merge-extra": false,
      "merge-extra-deep": false,
      "merge-scripts": false
    }
  }
}
