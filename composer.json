{
  "config": {
    "platform": {
      "php": "5.6.31"
    }
  },
  "scripts": {
    "post-install-cmd": "@composer update"
  },
  "require": {
    "slim/slim": "^3.0",
    "wikimedia/composer-merge-plugin": "^1.4",
    "google/cloud-logging": "^1.19"
  },
  "extra": {
    "merge-plugin": {
      "include": [
        "src/*/composer.json"
      ],
      "recurse": false,
      "replace": false,
      "ignore-duplicates": false,
      "merge-dev": true,
      "merge-extra": false,
      "merge-extra-deep": false,
      "merge-scripts": false
    }
  }
}
